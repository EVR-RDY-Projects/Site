    id: 'chronicle-fusion',
    name: 'Shared Chronicle Stack',
    status: 'Design',
    variant: 'design',
    domain: 'mission-hub',
    description: 'Shared Chronicle automations, detection content, and reporting pipeline.',
    outcome: 'Cuts analytic cost while preserving compliance-grade evidence for every partner.'
  }
};

const tacSocGroup = {
  id: 'tacsoc',
  name: 'TacSOC Cloud',
  status: 'Design + Pilot',
  variant: 'design',
  domain: 'mission-hub',
  description: 'Veteran-led mission cloud that fuses AI triage, hunter/killer teams, and a shared Chronicle stack.',
  outcome: 'Delivers coordinated detection, response, and reporting for every partner operator.',
  components: [pipelineComponents.aiTriage, pipelineComponents.hunterKiller, pipelineComponents.chronicleStack]
};

const pipelineDomains = [
  {
    id: 'ot',
    title: 'OT Network',
    label: 'Operational Technology',
    summary: 'SCOUT and SEER harvest host and network telemetry without disrupting production workflows.',
    status: 'Active Deployment',
    statusVariant: 'active',
    variant: 'ot',
    components: [pipelineComponents.scout, pipelineComponents.seer]
  },
  {
    id: 'buffer',
    title: 'One-Way Buffer',
    label: 'Cross-Domain Guard',
    summary: 'GHOST hardware diode pushes telemetry forward while preventing any path back into OT.',
    status: 'Hardware PoC',
    statusVariant: 'pilot',
    variant: 'buffer',
    components: [pipelineComponents.ghost]
  },
  {
    id: 'mission-hub',
    title: 'IT Network',
    label: 'Information Technology',
    summary: 'RAMPART conditions telemetry before the TacSOC cloud analyzes, hunts, and reports.',
    status: 'Design + Pilot',
    statusVariant: 'design',
    variant: 'tacsoc',
    components: [pipelineComponents.rampart, tacSocGroup]
  }
];

const flagshipProducts = [
  {
    name: 'T.A.P.S.',
    oneLiner: 'Telemetry Acquisition Platform Solution — a complete OT-to-IT pipeline ready for Chronicle.',
    bullets: [
