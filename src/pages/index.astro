<script>
  document.addEventListener('DOMContentLoaded', () => {
    // IntersectionObserver: reveal animated elements
    const io = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          io.unobserve(entry.target);
        }
      });
    }, { threshold: 0.12 });

    document.querySelectorAll('[data-animate]').forEach((el) => io.observe(el));

    // Animate details (.component-compact) open/close by adjusting maxHeight
    document.querySelectorAll('details.component-compact').forEach((details) => {
      const body = details.querySelector('.component-body');
      if (!body) return;
      // Initialize
      body.style.maxHeight = details.open ? body.scrollHeight + 'px' : '0px';
      details.addEventListener('toggle', () => {
        if (details.open) {
          // expand to content height
          body.style.maxHeight = body.scrollHeight + 'px';
        } else {
          // collapse
          body.style.maxHeight = '0px';
        }
      });
    });

    // Team bios: animated expand/collapse using aria-hidden and maxHeight
    const bioToggles = document.querySelectorAll('[data-bio-toggle]');
    bioToggles.forEach((button) => {
      const id = button.getAttribute('data-bio-toggle');
      if (!id) return;
      const region = document.getElementById(`bio-${id}`);
      const showLessBtn = document.querySelector(`[data-bio-collapse="${id}"]`);
      if (!region) return;
      
      // set initial states
      region.setAttribute('aria-hidden', region.hidden ? 'true' : 'false');
      region.style.maxHeight = region.hidden ? '0px' : region.scrollHeight + 'px';
      
      // Read more button click
      button.addEventListener('click', () => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        button.setAttribute('aria-expanded', (!expanded).toString());
        if (!expanded) {
          // expand
          region.hidden = false;
          region.setAttribute('aria-hidden', 'false');
          region.style.maxHeight = region.scrollHeight + 'px';
          button.style.display = 'none';
          if (showLessBtn) showLessBtn.style.display = 'inline-block';
        }
      });
      
      // Show less button click
      if (showLessBtn) {
        showLessBtn.addEventListener('click', () => {
          region.setAttribute('aria-hidden', 'true');
          region.style.maxHeight = '0px';
          region.hidden = true;
          button.setAttribute('aria-expanded', 'false');
          button.style.display = 'inline-block';
          showLessBtn.style.display = 'none';
        });
      }
    });

    // Section toggle: expand/collapse per-section details without losing content
    document.querySelectorAll('.section-toggle').forEach((btn) => {
      const targetId = btn.getAttribute('data-toggle-section');
      if (!targetId) return;
      const section = document.getElementById(targetId);
      if (!section) return;
      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        if (expanded) {
          section.classList.add('collapsed');
          btn.setAttribute('aria-expanded', 'false');
          btn.textContent = 'Show details';
        } else {
          section.classList.remove('collapsed');
          btn.setAttribute('aria-expanded', 'true');
          btn.textContent = 'Hide details';
        }
      });
    });

    // Respect prefers-reduced-motion: reveal all immediately
    if (window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      document.querySelectorAll('[data-animate]').forEach((el) => el.classList.add('in-view'));
    }
  });
</script>
