---
export interface Props {
  currentPath?: string;
  showBanner?: boolean;
  pageTitle?: string;
}

const { currentPath = '', showBanner = false, pageTitle } = Astro.props;

const navItems = [
  { name: 'Mission', href: '#mission', fallback: '/#mission' },
  { name: 'Approach', href: '#approach', fallback: '/#approach' },
  { name: 'Data Flow', href: '#pipeline', fallback: '/#pipeline' },
  { name: 'Team', href: '#team', fallback: '/#team' },
  { name: 'Engage', href: '#engage', fallback: '/#engage' },
  // Resources removed from top navigation per request
];

const isActive = (href: string) => currentPath === href || currentPath.startsWith(href + '/');
const isHome = currentPath === '/' || currentPath === '';
---

<header>
  <nav class="main-nav">
    <div class="container">
      <a href="/" class="logo" data-home-logo aria-label="EVR:RDY Home">
        <img src="/img/logo.png" alt="EVR:RDY Logo" />
        <span>EVR:RDY</span>
      </a>
      <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="nav-links" role="menubar" aria-label="Main navigation">
        {navItems.map((item) => (
          <li role="none">
            <a
              href={isHome ? item.href : item.fallback}
              class={!isHome && isActive(item.fallback ?? item.href) ? 'active' : ''}
              role="menuitem"
              aria-label={`Navigate to ${item.name}`}
              aria-current={!isHome && isActive(item.fallback ?? item.href) ? 'page' : undefined}
              data-nav-anchor={isHome && item.href.startsWith('#') ? true : undefined}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
  {isHome || showBanner ? (
    <div class="hero parallax" data-speed="0.5">
      <div class="container">
        <div class="hero-content animate-fade-in-up parallax" data-speed="0.3">
          <img src="/img/banner.png" alt="EVR:RDY — Defend Forward · Advance Always" loading="eager" fetchpriority="high" />
        </div>
      </div>
    </div>
  ) : null}
</header>

<style>
  header {
    position: relative;
  }

  .main-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.4);
    -webkit-backdrop-filter: blur(12px) saturate(120%);
    backdrop-filter: blur(12px) saturate(120%);
    border-bottom: 1px solid rgba(229, 228, 216, 0.2);
    padding: var(--space-md) 0;
    box-shadow: 
      0 20px 25px -5px rgba(0, 0, 0, 0.15),
      0 10px 10px -5px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all var(--transition-normal);
  }

  /* Fade out nav bar when scrolling with enhanced backdrop blur */
  .main-nav.scrolled {
    opacity: 0.75;
    background: rgba(0, 0, 0, 0.3);
  }

  .main-nav::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(169, 214, 138, 0.4) 50%, 
      transparent 100%);
  }

  .main-nav .container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-xl);
    position: relative;
    padding: 0 clamp(1.5rem, 4vw, 3.5rem);
    padding-left: clamp(6.5rem, 12vw, 9rem);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--bone);
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
    transition: all var(--transition-normal);
    position: absolute;
    left: 0;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    opacity: 0;
    visibility: hidden;
  }

  /* Show logo when scrolled on home page */
  .logo.scrolled {
    opacity: 1;
    visibility: visible;
    animation: fadeInLogo 0.5s ease-out;
  }

  /* Active state for logo (same as nav links) */
  .logo.active {
    color: var(--bright);
    text-shadow: 0 0 12px rgba(169, 214, 138, 0.4);
  }

  .logo.active::before {
    opacity: 1;
  }

  .logo.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 70%;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent, 
      var(--bright) 20%, 
      var(--bright) 80%, 
      transparent);
    border-radius: 2px;
    box-shadow: 0 0 8px rgba(169, 214, 138, 0.6);
  }

  @keyframes fadeInLogo {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .logo::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(169, 214, 138, 0.1), rgba(169, 214, 138, 0.05));
    opacity: 0;
    border-radius: var(--radius-md);
    transition: opacity var(--transition-normal);
  }

  .logo:hover::before {
    opacity: 1;
  }

  .logo:hover {
    color: var(--bright);
    transform: translateY(-1px) scale(1.02);
    text-shadow: 0 0 12px rgba(169, 214, 138, 0.4);
  }

  .logo img {
    width: 42px;
    height: 42px;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(169, 214, 138, 0.3));
    transition: all var(--transition-normal);
  }

  .logo:hover img {
    transform: scale(1.05) rotate(-2deg);
    filter: drop-shadow(0 4px 8px rgba(169, 214, 138, 0.5));
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
    justify-content: center;
    flex: 1;
    margin: 0 auto;
  }

  .nav-links a {
    color: rgba(229, 228, 216, 0.9);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.01em;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
    position: relative;
    overflow: visible;
  }

  .nav-links a::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, 
      rgba(169, 214, 138, 0.12), 
      rgba(169, 214, 138, 0.08));
    opacity: 0;
    transition: opacity var(--transition-normal);
    border-radius: var(--radius-md);
    border: 1px solid rgba(169, 214, 138, 0.2);
    box-shadow: 0 0 0 rgba(169, 214, 138, 0);
  }

  .nav-links a:hover::before,
  .nav-links a.active::before {
    opacity: 1;
    box-shadow: 
      0 0 12px rgba(169, 214, 138, 0.2),
      0 0 24px rgba(169, 214, 138, 0.1);
  }

  .nav-links a:hover {
    color: var(--bright);
    transform: translateY(-1px) scale(1.02);
    text-shadow: 
      0 0 8px rgba(169, 214, 138, 0.4),
      0 0 16px rgba(169, 214, 138, 0.2);
  }

  .nav-links a.active {
    color: var(--bright);
    text-shadow: 0 0 12px rgba(169, 214, 138, 0.4);
  }

  .nav-links a.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 70%;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent, 
      var(--bright) 20%, 
      var(--bright) 80%, 
      transparent);
    border-radius: 2px;
    box-shadow: 
      0 0 8px rgba(169, 214, 138, 0.6),
      0 0 16px rgba(169, 214, 138, 0.3);
    animation: slideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes slideIn {
    from {
      width: 0;
      opacity: 0;
      transform: translateX(-50%) translateY(-2px);
    }
    to {
      width: 70%;
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }

  .hero {
    padding-top: 0;
  }

  .hero img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-2xl);
    border: 1px solid rgba(229,228,216,.12);
    transition: transform var(--transition-normal);
  }

  .hero img:hover {
    transform: translateY(-2px);
  }

  .page-header {
    padding: var(--space-2xl) 0 var(--space-xl);
    background: linear-gradient(135deg, 
      rgba(14, 16, 18, 0.95), 
      rgba(14, 16, 18, 0.85));
    border-bottom: 1px solid rgba(229, 228, 216, 0.15);
    margin-bottom: var(--space-lg);
    position: relative;
  }

  .page-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(169, 214, 138, 0.3) 50%, 
      transparent 100%);
  }

  .page-title {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--bone);
    margin: 0;
    font-weight: 700;
    background: linear-gradient(135deg, var(--bone), var(--bright));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-align: center;
    letter-spacing: -0.03em;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
  }

  /* Mobile Menu Toggle Button */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 32px;
    height: 32px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
    position: relative;
  }

  .mobile-menu-toggle span {
    width: 28px;
    height: 3px;
    background: var(--bone);
    border-radius: 3px;
    transition: all var(--transition-normal);
    transform-origin: center;
  }

  .mobile-menu-toggle:hover span {
    background: var(--bright);
  }

  .mobile-menu-toggle[aria-expanded="true"] span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
  }

  .mobile-menu-toggle[aria-expanded="true"] span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle[aria-expanded="true"] span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
  }

  @media (max-width: 768px) {
    .logo.scrolled {
      opacity: 1;
      visibility: visible;
    }

    .main-nav {
      padding: var(--space-sm) 0;
      border-bottom: 1px solid rgba(169, 214, 138, 0.15);
    }

    .main-nav .container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-sm);
      padding: 0 var(--space-md);
    }

    .logo {
      position: relative;
      left: auto;
      font-size: 1rem;
      opacity: 1;
      visibility: visible;
      padding: var(--space-xs);
    }

    .logo img {
      width: 32px;
      height: 32px;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .nav-links {
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.95);
      -webkit-backdrop-filter: blur(16px) saturate(120%);
      backdrop-filter: blur(16px) saturate(120%);
      border-bottom: 1px solid rgba(229, 228, 216, 0.2);
      box-shadow: 
        0 10px 25px -5px rgba(0, 0, 0, 0.3),
        0 5px 10px -5px rgba(0, 0, 0, 0.2);
      flex-direction: column;
      padding: var(--space-md);
      gap: var(--space-sm);
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      visibility: hidden;
      transition: all var(--transition-normal);
      z-index: 999;
      margin: 0;
    }

    .nav-links.open {
      max-height: 500px;
      opacity: 1;
      visibility: visible;
    }

    .nav-links li {
      width: 100%;
    }

    .nav-links a {
      display: block;
      width: 100%;
      font-size: 1rem;
      padding: var(--space-md);
      font-weight: 600;
      text-align: center;
      border-radius: var(--radius-md);
      border: 1px solid rgba(229, 228, 216, 0.1);
      transition: all var(--transition-normal);
    }

    .nav-links a:hover,
    .nav-links a.active {
      background: rgba(169, 214, 138, 0.1);
      border-color: rgba(169, 214, 138, 0.3);
      transform: translateX(4px);
    }

  }

  @media (max-width: 480px) {
    .main-nav .container {
      padding: 0 var(--space-sm);
      gap: var(--space-xs);
    }

    .logo {
      font-size: 0.9rem;
    }

    .logo img {
      width: 28px;
      height: 28px;
    }

    .logo span {
      display: none;
    }

    .nav-links {
      top: 55px;
      padding: var(--space-sm);
    }

    .nav-links a {
      font-size: 0.9rem;
      padding: var(--space-sm) var(--space-md);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const isHomePage = window.location.pathname === '/' || window.location.pathname === '';
    const logo = document.querySelector('[data-home-logo]');
    const nav = document.querySelector('.main-nav');
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const navLinks = document.querySelector('.nav-links');
    let isMobile = window.innerWidth <= 768;
    
    // Mobile menu toggle
    if (mobileMenuToggle && navLinks) {
      mobileMenuToggle.addEventListener('click', () => {
        const isOpen = mobileMenuToggle.getAttribute('aria-expanded') === 'true';
        mobileMenuToggle.setAttribute('aria-expanded', !isOpen);
        navLinks.classList.toggle('open');
        
        // Prevent body scroll when menu is open
        if (!isOpen) {
          document.body.style.overflow = 'hidden';
        } else {
          document.body.style.overflow = '';
        }
      });

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (isMobile && navLinks.classList.contains('open')) {
          if (!nav.contains(e.target)) {
            mobileMenuToggle.setAttribute('aria-expanded', 'false');
            navLinks.classList.remove('open');
            document.body.style.overflow = '';
          }
        }
      });

      // Close menu when clicking a nav link (mobile)
      navLinks.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          if (isMobile) {
            mobileMenuToggle.setAttribute('aria-expanded', 'false');
            navLinks.classList.remove('open');
            document.body.style.overflow = '';
          }
        });
      });
    }

    const smoothScrollTo = (hash) => {
      const target = document.querySelector(hash);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    };

    const anchorLinks = document.querySelectorAll('a[data-nav-anchor]');
    anchorLinks.forEach((link) => {
      link.addEventListener('click', (event) => {
        const href = link.getAttribute('href');
        if (!href) return;

        const isHash = href.startsWith('#');
        const isRootHash = href.startsWith('/#');
        const homePaths = window.location.pathname === '/' || window.location.pathname === '';

        if (isHash || (isRootHash && homePaths)) {
          const targetHash = isHash ? href : href.substring(1);
          event.preventDefault();

          if (isMobile && navLinks && mobileMenuToggle) {
            mobileMenuToggle.setAttribute('aria-expanded', 'false');
            navLinks.classList.remove('open');
            document.body.style.overflow = '';
          }

          requestAnimationFrame(() => smoothScrollTo(targetHash));
        }
      });
    });
    
    // On mobile or non-home pages, always show the logo
    if ((!isHomePage || isMobile) && logo) {
      logo.style.opacity = '1';
      logo.style.visibility = 'visible';
      if (isMobile) {
        logo.classList.remove('scrolled', 'active');
      }
    }

    let lastScrollY = window.scrollY;
    let scrollThreshold = 100; // Show logo after scrolling 100px (home page only)

    const handleScroll = () => {
      const currentScrollY = window.scrollY;
      const nowMobile = window.innerWidth <= 768;

      // Don't handle scroll-based logo visibility on mobile
      if (nowMobile) {
        if (nav) {
          if (currentScrollY > 50) {
            nav.classList.add('scrolled');
          } else {
            nav.classList.remove('scrolled');
          }
        }
        return;
      }

      // Logo fade-in only on home page (desktop)
      if (isHomePage && logo) {
        if (currentScrollY > scrollThreshold) {
          logo.classList.add('scrolled', 'active');
        } else {
          logo.classList.remove('scrolled', 'active');
        }
      }

      // Nav bar fade on all pages
      if (nav) {
        if (currentScrollY > 50) {
          nav.classList.add('scrolled');
        } else {
          nav.classList.remove('scrolled');
        }
      }

      lastScrollY = currentScrollY;
    };

    // Use throttled scroll for better performance
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    }, { passive: true });

    // Handle window resize to update mobile state
    window.addEventListener('resize', () => {
      const wasMobile = isMobile;
      isMobile = window.innerWidth <= 768;
      
      // Close mobile menu if resizing to desktop
      if (!isMobile && wasMobile && navLinks && mobileMenuToggle) {
        navLinks.classList.remove('open');
        mobileMenuToggle.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      }
      
      if (isMobile && logo) {
        logo.style.opacity = '1';
        logo.style.visibility = 'visible';
        logo.classList.remove('scrolled', 'active');
      } else if (!isMobile && wasMobile && !isHomePage && logo) {
        logo.style.opacity = '1';
        logo.style.visibility = 'visible';
      } else if (!isMobile && wasMobile && isHomePage && logo) {
        logo.style.opacity = '';
        logo.style.visibility = '';
        handleScroll();
      }
    }, { passive: true });

    // Check initial scroll position
    handleScroll();
  });
</script>
